            </Button>
            <Button fx:id="refreshButton" layoutX="193.0" layoutY="16.0" prefWidth="60.0" styleClass="button" text="Refresh">
                <AnchorPane.leftAnchor>193.0</AnchorPane.leftAnchor>
                <AnchorPane.topAnchor>16.0</AnchorPane.topAnchor>
            </Button>

            <!-- Bouton Connexion à droite -->
            <Button fx:id="loginButton" style="-fx-background-color: #6495ED; -fx-text-fill: #ffffff;" text="Connexion">
                <AnchorPane.rightAnchor>10.0</AnchorPane.rightAnchor>
                <AnchorPane.topAnchor>15.0</AnchorPane.topAnchor>
            </Button>
        </AnchorPane>
    </top>

    <!-- Section centrale -->
    <center>
        <ScrollPane fx:id="scrollPane" prefHeight="645.0" prefWidth="922.0">
            <FlowPane fx:id="flowPane" alignment="CENTER" prefHeight="1790.0" prefWidth="938.0" />
        </ScrollPane>
    </center>
</BorderPane>