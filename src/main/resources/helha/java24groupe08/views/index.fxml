    <top>
        <AnchorPane prefHeight="56.0" style="-fx-background-color: #6495ED;" BorderPane.alignment="CENTER">
            <!-- Titre "Cinéma" centré -->
            <Label fx:id="titleLabel" alignment="CENTER" layoutX="383.0" layoutY="5.0" prefHeight="46.0" prefWidth="174.0" style="-fx-font-size: 30.0px;" text="Cinéma" textFill="#fcfcfc">
                <AnchorPane.leftAnchor>383.0</AnchorPane.leftAnchor>
                <AnchorPane.rightAnchor>383.4000000000001</AnchorPane.rightAnchor>
                <AnchorPane.topAnchor>5.0</AnchorPane.topAnchor>
            </Label>

            <!-- Barre de recherche avec largeur limitée -->
            <TextField fx:id="searchField" prefHeight="26.0" prefWidth="122.0" promptText="Type here to search" styleClass="search-box">
                <AnchorPane.leftAnchor>10.0</AnchorPane.leftAnchor>
                <AnchorPane.topAnchor>15.0</AnchorPane.topAnchor>
