<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/15" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="helha.java24groupe08.client.controllers.SideWindowController"
      prefWidth="500" prefHeight="400"
      alignment="CENTER">

    <Label text="Titre :" />
    <TextField fx:id="titleField">
        <VBox.margin>
            <Insets left="10" right="10"/>
        </VBox.margin>
    </TextField>

    <Label text="Plot :" />
    <TextArea fx:id="plotArea" prefWidth="200" prefHeight="100">
        <VBox.margin>
            <Insets left="10" right="10"/>
        </VBox.margin>
    </TextArea>

    <Button text="Save" onAction="#saveChangesOnAction"/>
    <Button text="Delete Movie" onAction="#deleteMovieAction"/>
</VBox>